/// Java Script



const posts = [
  {
    title: "Welcome to My Blog",
    content: "This is the first post on my new blog. Stay tuned for more updates!"
  },
  {
    title: "Why I Started Blogging",
    content: "I started blogging to share my thoughts and learn from others."
  },
  {
    title: "JavaScript Tips",
    content: "JavaScript is a powerful tool for building interactive websites. Start small and experiment!"
  }
];

const container = document.getElementById('blog-posts');

posts.forEach(post => {
  const postDiv = document.createElement('div');
  postDiv.className = 'post';

  const title = document.createElement('h2');
  title.textContent = post.title;

  const content = document.createElement('p');
  content.textContent = post.content;

  postDiv.appendChild(title);
  postDiv.appendChild(content);

  container.appendChild(postDiv);
});

